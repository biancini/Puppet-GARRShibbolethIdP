<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

    <!-- ICA Metadata -->
    <bean id="ICAMetadata" class="uk.ac.cardiff.model.ServiceMetadata">
        <property name="organisationName"><value><%= @metadata_information['en']['nameOrg'] %></value></property>
        <property name="contactEmail"><value><%= @metadata_information['technicalIDPadminEmail'].gsub("mailto:","") %></value></property>
        <property name="serviceName"><value><%= @metadata_information['en']['orgDisplayName'] %></value></property>
        <property name="entityId"><value>https://<%= @fqdn %>/raptor-ica</value></property>
    </bean>


  </beans>
